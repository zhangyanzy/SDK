<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#131313"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="284dp"
        android:layout_height="335dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/trw_dialog_bg"
        android:orientation="vertical">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/trw_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="一号通:注册"
            android:textColor="#383737"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/register_et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/trw_border"
            android:hint="账号：请输入手机"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#D3D3D3" />

        <EditText
            android:id="@+id/register_et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/trw_border"
            android:hint="密码：6-12位数字.字母"
            android:maxLength="12"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#D3D3D3"
            android:inputType="textPassword"
            android:singleLine="true"
            />

        <Button
            android:id="@+id/regitster_btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/trw_pay_bg"
            android:text="注 册"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/have_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:textColor="#616161"
                android:text="已有账号>"
                android:textSize="16dp" />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>