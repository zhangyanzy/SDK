<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:id="@+id/trwGameMenu"
             android:layout_width="120dp"
             android:layout_height="50dp">

    <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/trwGameMenuLine"
            android:background="@drawable/trw_menu_bg"
            android:visibility="gone"
            android:layout_width="120dp"
            android:layout_height="50dp">
    </LinearLayout>


    <FrameLayout
            android:id="@+id/trwGameFra"
            android:layout_width="50dp"
            android:layout_height="50dp">

        <ImageView
                android:id="@+id/trwGameLogo"
                android:layout_width="50dp" android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/trw_image_float_logo"
        />

        <ImageView
                android:id="@+id/trwGameLoader"
                android:layout_width="50dp" android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/trw_anim_background"
        />

    </FrameLayout>

</FrameLayout>