<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ededed">
    <TextView
        android:id="@+id/title"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="#111"
        android:text="支付结果"/>
    <ImageView
        android:id="@+id/back_press"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/trw_close"/>
    <ImageView
        android:id="@+id/iv_pay_result"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/trw_pay_succeed"/>
    <LinearLayout
        android:layout_below="@+id/iv_pay_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
        android:layout_gravity="center"
        android:id="@+id/tv_pay_result"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="恭喜你，支付成功"
        android:textColor="#5b5858"
        android:textSize="20sp"/>
        <TextView
        android:layout_gravity="center"
        android:id="@+id/order_title"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="订单信息"
        android:textSize="16sp"
        android:textColor="#5b5858"/>
        <TextView
            android:id="@+id/order_number"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="游戏订单号:YX94723852356"
            android:textColor="#1b1b1b"/>
        <TextView
            android:id="@+id/pay_good"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="商品：首充礼包"
            android:textColor="#1b1b1b"/>
        <TextView
            android:id="@+id/pay_amount"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="支付金额：¥6.00"
            android:textColor="#1b1b1b"/>
        <Button
            android:id="@+id/btn_goBackGame"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/trw_pay_back"
            android:textSize="16sp"
            android:text="返回游戏"/>
        <Button
            android:id="@+id/btn_payAgain"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/trw_pay_again"
            android:textSize="16sp"
            android:text="再次支付"/>
    </LinearLayout>
</RelativeLayout>